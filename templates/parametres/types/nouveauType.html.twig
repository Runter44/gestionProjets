{% extends 'base.html.twig' %}

{% block title %}Nouveau type de projet{% endblock %}

{% block body %}
<h1 class="mb-5">Nouveau type de projet</h1>
{{ form_start(form, {'attr': {'id': 'formNouveauTypeProj'}} ) }}
  <div class="form-group row">
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
    <div class="invalid-feedback" id="invalidNomTypeUtilise" style="font-size: 16px;">Ce nom de type de projet est déjà utilisé</div>
  </div>
  <h3 class="mt-5">Tâches du type de projet</h3>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" id="invalidAucuneTache">
    Vous n'avez ajouté aucune tâche !
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <ul class="typeTaches p-0" id="tachesNouveauTypeProjet" data-prototype="{{ form_widget(form.tacheTypes.vars.prototype)|e('html_attr') }}">
    {% for typeTache in form.tacheTypes %}
      <li class="mt-3 list-style-type-none">{{form_row(typeTache)}}</li>
    {% endfor %}
  </ul>
  <input type="submit" class="btn btn-dark m-auto d-block" id="boutonCreerTypeProjet" value="Enregistrer">
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/nouveauTypeProjet.js') }}"></script>
{% endblock %}
