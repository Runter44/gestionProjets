{% extends 'base.html.twig' %}

{% block title %}Nouveau type de projet{% endblock %}

{% block body %}
<h1 class="mb-3 mb-sm-5">Nouveau type de projet <a href="{{ path('parametresTypes') }}" class="btn btn-dark d-none d-sm-inline-block">Annuler</a></h1>
{{ form_start(form, {'attr': {'id': 'formNouveauTypeProj'}} ) }}
  <div class="form-group">
    {{ form_label(form.nom) }}
    {{ form_widget(form.nom) }}
  </div>
    <div class="invalid-feedback p-sm-0 mt-0" id="invalidNomTypeUtilise">Ce nom de type de projet est déjà utilisé</div>
  <h3 class="mt-3 mt-sm-5 mb-0">Tâches du type de projet</h3>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" id="invalidAucuneTache">
    Vous n'avez ajouté aucune tâche !
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <ul class="typeTaches p-0" id="tachesNouveauTypeProjet" data-prototype="{{ form_widget(form.typeTaches.vars.prototype)|e('html_attr') }}">
    {% for typeTache in form.typeTaches %}
      <li class="mt-3 list-style-type-none">{{form_row(typeTache)}}</li>
    {% endfor %}
  </ul>
  <input type="submit" class="btn btn-dark mx-auto mt-4 mt-sm-auto d-block" id="boutonCreerTypeProjet" value="Enregistrer">
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/nouveauTypeProjet.js') }}"></script>
{% endblock %}
