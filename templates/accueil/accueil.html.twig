{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="centered-div">
  <img src="{{ asset('images/logo-umanit.png') }}" alt="UmanIT">
  <h1 class="mb-5">Gestion des projets</h1><br>
    <h2>Vérifier l'avancement d'un projet</h2>
    <div class="form-inline d-block m-auto">
    <select class="custom-select mr-2" name="projet" required id="projetVoir">
      <option selected value="aucun">Sélectionnez un projet...</option>
      {% for proj in projets %}
        <option value="{{ proj.slug }}">{{ proj.name }}</option>
      {% endfor %}
    </select>
    <input type="submit" name="voirAvancement" id="formVoirAvancement" class="btn btn-outline-dark" value="Valider">
    <div class="invalid-feedback" style="margin-left: -45px;">Vous n'avez sélectionné aucun projet</div>
  </div>
</div>
{% endblock %}
